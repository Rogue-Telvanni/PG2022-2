{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-g",
				"${workspaceRoot}/HelloTriangle/HelloTriangle/Source.cpp",
				"${workspaceRoot}/HelloTriangle/HelloTriangle/glad.c",
				"${workspaceRoot}/HelloTriangle/HelloTriangle/glad.h",
				"-o",
				"${workspaceRoot}/HelloTriangle/HelloTriangle/build",
				"{workspaceFolder}/dependencies/GLAD/include",
				"{workspaceFolder}/dependencies/GLAD/src",
				"{workspaceFolder}/dependencies/GLFW-3.3.8/include",
				"-lGLU",
				"-lglfw",
				"-lGLEW",
				"-lGL",
				"-lglut"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/gcc"
		},
		{
			"label": "cmake",
			"type": "shell",
			"options": {
				"cwd": "${workspaceRoot}/build"
			},
			"command": "cmake \"MinGW Makefiles\"  ${workspaceRoot}"
		},
		{
			"type": "cmake",
			"label": "CMake: build",
			"command": "build",
			"targets": [
				"all"
			],
			"group": "build",
			"problemMatcher": [],
			"detail": "CMake template build task"
		}
	]
}